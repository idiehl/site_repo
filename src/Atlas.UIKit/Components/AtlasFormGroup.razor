<div class="atlas-form-group">
    <label class="atlas-form-group__label" for="@LabelFor">@Label</label>
    <div class="atlas-form-group__content">
        @ChildContent
    </div>
    @if (!string.IsNullOrEmpty(HelpText))
    {
        <p class="atlas-form-group__help">@HelpText</p>
    }
</div>

@code {
    [Parameter] public string Label { get; set; } = "";
    [Parameter] public string? LabelFor { get; set; }
    [Parameter] public string? HelpText { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
