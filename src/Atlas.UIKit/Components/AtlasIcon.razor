@* Renders an SVG icon from the UIKit icon set *@
<img src="_content/Atlas.UIKit/icons/@(Name).svg"
     width="@Size" height="@Size"
     alt="@Alt"
     class="atlas-icon @CssClass"
     style="@ComputedStyle"
     @attributes="AdditionalAttributes" />

@code {
    [Parameter] public string Name { get; set; } = "atlas-universalis-icon-e";
    [Parameter] public int Size { get; set; } = 24;
    [Parameter] public string? Alt { get; set; }
    [Parameter] public string? Color { get; set; }
    [Parameter] public string? CssClass { get; set; }
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }

    private string ComputedStyle => Color != null ? $"filter: brightness(0) saturate(100%); color: {Color};" : "";
}
