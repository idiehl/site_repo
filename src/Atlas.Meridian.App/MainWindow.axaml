<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="Atlas.Meridian.App.MainWindow"
        Title="Atlas Meridian">
    <DockPanel Background="#0b1220">
        <Border DockPanel.Dock="Top" Background="#0f1a2e" Padding="16">
            <TextBlock Text="Atlas Meridian" FontSize="20" FontWeight="SemiBold" Foreground="#e2e8f0"/>
        </Border>

        <Grid Margin="16">
            <Border Background="#111827" BorderBrush="#1f2937" BorderThickness="1" CornerRadius="12" Padding="24">
                <StackPanel Spacing="12">
                    <TextBlock Text="Canvas Preview" FontSize="18" FontWeight="SemiBold" Foreground="#e2e8f0"/>
                    <TextBlock
                        Text="This is the Meridian desktop scaffold. The interactive canvas, nodes, and editor panels will be wired in next."
                        TextWrapping="Wrap"
                        Foreground="#94a3b8"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Border Background="#1f2937" CornerRadius="10" Padding="10,6">
                            <TextBlock Text=".NET 8" Foreground="#e2e8f0" FontSize="12"/>
                        </Border>
                        <Border Background="#1f2937" CornerRadius="10" Padding="10,6">
                            <TextBlock Text="Avalonia" Foreground="#e2e8f0" FontSize="12"/>
                        </Border>
                        <Border Background="#1f2937" CornerRadius="10" Padding="10,6">
                            <TextBlock Text="Skia" Foreground="#e2e8f0" FontSize="12"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
