@page
@model Atlas.Web.Pages.ShowcaseModel
@{
    ViewData["Title"] = "Atlas UIKit Showcase";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --atlas-midnight-navy: #0B1226;
            --atlas-deep-abyss: #070D1A;
            --atlas-blue: #101B35;
            --atlas-celestial-navy: #1A2744;
            --atlas-antique-gold: #C8963E;
            --atlas-burnished-gold: #A87B2F;
            --atlas-amber-glow: #D4A94E;
            --atlas-pale-gold: #E8C97A;
            --atlas-silver-steel: #BCC5D0;
            --atlas-mist-gray: #8A94A6;
            --atlas-cloud-white: #E8ECF1;
            --atlas-pure-white: #FFFFFF;
            --atlas-success: #22c55e;
            --atlas-warning: #f59e0b;
            --atlas-error: #ef4444;
            --atlas-info: #6b7cdb;
            --atlas-radius-sm: 2px;
            --atlas-radius-md: 4px;
            --atlas-radius-lg: 6px;
            --atlas-transition-fast: 150ms ease;
            --atlas-transition-normal: 300ms ease;
            --atlas-font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            --atlas-font-mono: 'JetBrains Mono', 'Fira Code', monospace;
            --atlas-font-serif: 'Playfair Display', 'Georgia', serif;
        }

        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: var(--atlas-font-sans);
            background: var(--atlas-midnight-navy);
            color: var(--atlas-silver-steel);
            line-height: 1.6;
            -webkit-font-smoothing: antialiased;
        }

        .showcase { max-width: 72rem; margin: 0 auto; padding: 2rem 1.5rem 4rem; }
        .showcase-header {
            text-align: center;
            padding: 4rem 0 3rem;
        }
        .showcase-header h1 {
            font-family: var(--atlas-font-serif);
            font-size: 2.5rem;
            color: var(--atlas-cloud-white);
            margin-bottom: 0.5rem;
        }
        .showcase-header p {
            color: var(--atlas-mist-gray);
            font-size: 1rem;
        }

        .section {
            margin-bottom: 3.5rem;
        }
        .section__title {
            font-size: 0.75rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.2em;
            color: var(--atlas-antique-gold);
            margin-bottom: 0.5rem;
        }
        .section__divider {
            height: 1px;
            background: rgba(200, 150, 62, 0.2);
            margin-bottom: 2rem;
        }
        .section__desc {
            font-size: 0.8125rem;
            color: var(--atlas-mist-gray);
            margin-bottom: 1.5rem;
        }

        .row { display: flex; flex-wrap: wrap; gap: 1rem; align-items: flex-start; margin-bottom: 1.5rem; }
        .row--center { align-items: center; }
        .col { flex: 1; min-width: 200px; }
        .stack { display: flex; flex-direction: column; gap: 1rem; }
        .inline { display: inline-flex; flex-wrap: wrap; gap: 0.5rem; align-items: center; }

        .card-demo {
            background: var(--atlas-blue);
            border: 1px solid rgba(188, 197, 208, 0.1);
            border-radius: var(--atlas-radius-md);
            padding: 1.5rem;
        }
        .card-demo--gold {
            border-color: rgba(200, 150, 62, 0.25);
        }
        .card-demo--celestial {
            border-color: rgba(107, 124, 219, 0.2);
            background: var(--atlas-celestial-navy);
        }

        /* Typography */
        .type-display { font-family: var(--atlas-font-serif); font-size: 3rem; font-weight: 700; color: var(--atlas-cloud-white); line-height: 1.15; }
        .type-h1 { font-size: 2rem; font-weight: 700; color: var(--atlas-cloud-white); letter-spacing: -0.01em; }
        .type-h2 { font-size: 1.5rem; font-weight: 700; color: var(--atlas-cloud-white); }
        .type-h3 { font-size: 1.125rem; font-weight: 600; color: var(--atlas-cloud-white); }
        .type-h4 { font-size: 0.875rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; color: var(--atlas-cloud-white); }
        .type-body { font-size: 0.875rem; color: var(--atlas-silver-steel); }
        .type-caption { font-size: 0.75rem; color: var(--atlas-mist-gray); text-transform: uppercase; letter-spacing: 0.1em; }
        .type-mono { font-family: var(--atlas-font-mono); font-size: 0.8125rem; color: var(--atlas-antique-gold); }
        .type-label { display: block; font-size: 0.625rem; color: var(--atlas-mist-gray); text-transform: uppercase; letter-spacing: 0.15em; margin-bottom: 0.25rem; }

        /* Buttons */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: 1px solid transparent;
            border-radius: var(--atlas-radius-sm);
            font-family: var(--atlas-font-sans);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            cursor: pointer;
            transition: all var(--atlas-transition-fast);
            text-decoration: none;
        }
        .btn--sm { padding: 0.375rem 0.75rem; font-size: 0.625rem; }
        .btn--md { padding: 0.5rem 1.25rem; font-size: 0.6875rem; }
        .btn--lg { padding: 0.625rem 1.75rem; font-size: 0.75rem; }

        .btn--primary { background: var(--atlas-antique-gold); color: var(--atlas-deep-abyss); border-color: var(--atlas-antique-gold); }
        .btn--primary:hover { background: var(--atlas-amber-glow); border-color: var(--atlas-amber-glow); }
        .btn--secondary { background: transparent; color: var(--atlas-antique-gold); border-color: var(--atlas-antique-gold); }
        .btn--secondary:hover { background: rgba(200, 150, 62, 0.1); }
        .btn--ghost { background: transparent; color: var(--atlas-silver-steel); border-color: rgba(188, 197, 208, 0.2); }
        .btn--ghost:hover { border-color: rgba(188, 197, 208, 0.4); color: var(--atlas-cloud-white); }
        .btn--danger { background: var(--atlas-error); color: var(--atlas-pure-white); border-color: var(--atlas-error); }
        .btn--danger:hover { background: #dc2626; }
        .btn--celestial { background: rgba(107, 124, 219, 0.15); color: var(--atlas-info); border-color: rgba(107, 124, 219, 0.3); }
        .btn--celestial:hover { background: rgba(107, 124, 219, 0.25); }
        .btn--monument { background: transparent; color: var(--atlas-antique-gold); border-color: transparent; border-bottom: 2px solid var(--atlas-antique-gold); border-radius: 0; }
        .btn--link { background: transparent; color: var(--atlas-antique-gold); border: none; text-decoration: underline; text-underline-offset: 3px; padding-left: 0; padding-right: 0; }

        /* Inputs */
        .input {
            display: block;
            width: 100%;
            padding: 0.5rem 0.75rem;
            background: var(--atlas-deep-abyss);
            border: 1px solid rgba(188, 197, 208, 0.15);
            border-radius: var(--atlas-radius-md);
            color: var(--atlas-silver-steel);
            font-family: var(--atlas-font-sans);
            font-size: 0.8125rem;
            transition: border-color var(--atlas-transition-fast);
        }
        .input:focus { outline: none; border-color: var(--atlas-antique-gold); }
        .input::placeholder { color: var(--atlas-mist-gray); opacity: 0.6; }
        .input--error { border-color: var(--atlas-error); }
        .textarea { min-height: 6rem; resize: vertical; }

        .input-label {
            display: block;
            font-size: 0.6875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--atlas-mist-gray);
            margin-bottom: 0.375rem;
        }

        /* Badges (static versions) */
        .badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.75rem;
            font-size: 0.6875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            border-radius: var(--atlas-radius-sm);
            border: 1px solid;
        }
        .badge--standard { background: rgba(188, 197, 208, 0.12); border-color: rgba(188, 197, 208, 0.3); color: var(--atlas-silver-steel); }
        .badge--gold { background: rgba(200, 150, 62, 0.15); border-color: rgba(200, 150, 62, 0.4); color: var(--atlas-antique-gold); }
        .badge--celestial { background: rgba(26, 39, 68, 0.5); border-color: rgba(107, 124, 219, 0.3); color: var(--atlas-info); }
        .badge--outline { background: transparent; border-color: var(--atlas-antique-gold); color: var(--atlas-antique-gold); }

        /* Tags (static versions) */
        .tag {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            padding: 0.125rem 0.5rem;
            font-size: 0.625rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            border-radius: var(--atlas-radius-sm);
            border: 1px solid;
        }
        .tag--standard { background: rgba(188, 197, 208, 0.1); border-color: rgba(188, 197, 208, 0.25); color: var(--atlas-silver-steel); }
        .tag--gold { background: rgba(200, 150, 62, 0.12); border-color: rgba(200, 150, 62, 0.35); color: var(--atlas-antique-gold); }
        .tag__remove {
            background: none; border: none; color: inherit; cursor: pointer;
            padding: 0.125rem; opacity: 0.6; display: inline-flex;
        }

        /* Avatar (static versions) */
        .avatar {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            border: 2px solid;
            background: var(--atlas-celestial-navy);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            overflow: hidden;
        }
        .avatar--standard { border-color: var(--atlas-silver-steel); color: var(--atlas-silver-steel); }
        .avatar--gold { border-color: var(--atlas-antique-gold); color: var(--atlas-antique-gold); }
        .avatar--celestial { border-color: var(--atlas-info); color: var(--atlas-info); }

        /* Alerts (static versions) */
        .alert {
            display: flex;
            align-items: flex-start;
            gap: 0.75rem;
            padding: 0.875rem 1rem;
            border-radius: var(--atlas-radius-md);
            border-left: 3px solid;
            background: var(--atlas-blue);
        }
        .alert--info { border-left-color: var(--atlas-info); }
        .alert--success { border-left-color: var(--atlas-success); }
        .alert--warning { border-left-color: var(--atlas-warning); }
        .alert--error { border-left-color: var(--atlas-error); }
        .alert__icon { flex-shrink: 0; }
        .alert__icon--info { color: var(--atlas-info); }
        .alert__icon--success { color: var(--atlas-success); }
        .alert__icon--warning { color: var(--atlas-warning); }
        .alert__icon--error { color: var(--atlas-error); }
        .alert__title { font-size: 0.8125rem; font-weight: 700; color: var(--atlas-cloud-white); margin-bottom: 0.25rem; text-transform: uppercase; letter-spacing: 0.05em; }
        .alert__message { font-size: 0.8125rem; color: var(--atlas-mist-gray); }
        .alert__dismiss { flex-shrink: 0; background: none; border: none; color: var(--atlas-mist-gray); cursor: pointer; padding: 0.125rem; opacity: 0.6; margin-left: auto; }

        /* Progress (static versions) */
        .progress { width: 100%; }
        .progress__header { display: flex; justify-content: space-between; margin-bottom: 0.375rem; }
        .progress__label { font-size: 0.75rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.1em; color: var(--atlas-silver-steel); }
        .progress__value { font-size: 0.75rem; font-weight: 600; font-family: var(--atlas-font-mono); color: var(--atlas-mist-gray); }
        .progress__track { width: 100%; height: 4px; background: rgba(188, 197, 208, 0.1); border-radius: var(--atlas-radius-sm); overflow: hidden; }
        .progress__fill { height: 100%; border-radius: var(--atlas-radius-sm); }
        .progress__fill--standard { background: var(--atlas-silver-steel); box-shadow: 0 0 6px rgba(188, 197, 208, 0.3); }
        .progress__fill--gold { background: var(--atlas-antique-gold); box-shadow: 0 0 6px rgba(200, 150, 62, 0.4); }
        .progress__fill--celestial { background: var(--atlas-info); box-shadow: 0 0 6px rgba(107, 124, 219, 0.4); }

        /* Table */
        .table-wrap { overflow-x: auto; }
        .table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.8125rem;
        }
        .table th {
            text-align: left;
            font-size: 0.6875rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--atlas-mist-gray);
            padding: 0.75rem 1rem;
            border-bottom: 1px solid rgba(188, 197, 208, 0.12);
        }
        .table td {
            padding: 0.75rem 1rem;
            color: var(--atlas-silver-steel);
            border-bottom: 1px solid rgba(188, 197, 208, 0.06);
        }
        .table tbody tr:hover {
            background: rgba(200, 150, 62, 0.04);
        }

        /* Navbar demo */
        .navbar-demo {
            border: 1px solid rgba(188, 197, 208, 0.1);
            border-radius: var(--atlas-radius-md);
            overflow: hidden;
            margin-bottom: 1rem;
        }
        .navbar-preview {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1.25rem;
            height: 3.25rem;
        }
        .navbar-preview__brand { display: flex; align-items: center; gap: 0.5rem; }
        .navbar-preview__logo { color: var(--atlas-antique-gold); }
        .navbar-preview__name { font-size: 0.6875rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.2em; color: var(--atlas-cloud-white); }
        .navbar-preview__links { display: flex; gap: 0.25rem; }
        .navbar-preview__link { font-size: 0.625rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.1em; color: var(--atlas-mist-gray); padding: 0.375rem 0.625rem; text-decoration: none; }
        .navbar-preview__link--active { color: var(--atlas-antique-gold); }

        .navbar--standard-demo { background: rgba(10, 14, 26, 0.85); border-bottom: 1px solid rgba(200, 150, 62, 0.25); }
        .navbar--monument-demo { background: var(--atlas-midnight-navy); border-top: 4px solid var(--atlas-antique-gold); }
        .navbar--celestial-demo { background: rgba(10, 14, 26, 0.7); border-bottom: 1px solid rgba(107, 124, 219, 0.25); }
        .navbar--minimal-demo { background: transparent; }

        /* Dividers */
        .divider-line {
            height: 1px;
            background: rgba(200, 150, 62, 0.25);
            margin: 1rem 0;
        }
        .divider-compass {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin: 1rem 0;
        }
        .divider-compass__line { flex: 1; height: 1px; background: rgba(200, 150, 62, 0.25); }
        .divider-compass__icon { color: var(--atlas-antique-gold); opacity: 0.6; }

        /* Hero demo */
        .hero-demo {
            text-align: center;
            padding: 4rem 2rem;
            border-radius: var(--atlas-radius-md);
        }
        .hero-demo--standard { background: var(--atlas-midnight-navy); border: 1px solid rgba(188, 197, 208, 0.08); }
        .hero-demo--gradient { background: linear-gradient(180deg, var(--atlas-midnight-navy) 0%, var(--atlas-deep-abyss) 100%); border: 1px solid rgba(188, 197, 208, 0.08); }
        .hero-demo h2 { font-family: var(--atlas-font-serif); font-size: 2rem; color: var(--atlas-cloud-white); margin-bottom: 0.75rem; }
        .hero-demo p { color: var(--atlas-mist-gray); font-size: 1rem; max-width: 32rem; margin: 0 auto; }

        /* Footer demo */
        .footer-demo {
            background: var(--atlas-deep-abyss);
            border-radius: var(--atlas-radius-md);
            overflow: hidden;
        }
        .footer-demo__accent { height: 1px; background: linear-gradient(90deg, transparent, var(--atlas-antique-gold) 20%, var(--atlas-antique-gold) 80%, transparent); opacity: 0.5; }
        .footer-demo__content { padding: 2rem 1.5rem; text-align: center; }
        .footer-demo__brand { font-size: 0.75rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.25em; color: var(--atlas-cloud-white); margin-bottom: 0.75rem; }
        .footer-demo__links { display: flex; justify-content: center; gap: 1.5rem; margin-bottom: 0.75rem; }
        .footer-demo__link { font-size: 0.75rem; color: var(--atlas-mist-gray); text-decoration: none; text-transform: uppercase; letter-spacing: 0.1em; }
        .footer-demo__copyright { font-size: 0.6875rem; color: var(--atlas-mist-gray); opacity: 0.6; }

        /* Status banner demo */
        .banner-demo {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0.625rem 1rem;
            font-size: 0.8125rem;
            font-weight: 600;
            border-radius: var(--atlas-radius-md);
            margin-bottom: 0.75rem;
        }
        .banner--info { background: var(--atlas-info); color: var(--atlas-pure-white); }
        .banner--success { background: var(--atlas-success); color: var(--atlas-pure-white); }
        .banner--warning { background: var(--atlas-warning); color: var(--atlas-deep-abyss); }
        .banner--error { background: var(--atlas-error); color: var(--atlas-pure-white); }

        /* Interactive note */
        .interactive-note {
            background: rgba(107, 124, 219, 0.08);
            border: 1px solid rgba(107, 124, 219, 0.2);
            border-radius: var(--atlas-radius-md);
            padding: 1.25rem 1.5rem;
            font-size: 0.8125rem;
            color: var(--atlas-mist-gray);
        }
        .interactive-note strong { color: var(--atlas-info); }

        /* Tabs demo */
        .tabs-demo__bar {
            display: flex;
            border-bottom: 1px solid rgba(188, 197, 208, 0.12);
        }
        .tabs-demo__tab {
            font-size: 0.6875rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.1em;
            color: var(--atlas-mist-gray); padding: 0.75rem 1.25rem;
            border: none; border-bottom: 2px solid transparent; background: none; cursor: pointer;
            margin-bottom: -1px;
        }
        .tabs-demo__tab--active { color: var(--atlas-antique-gold); border-bottom-color: var(--atlas-antique-gold); }
        .tabs-demo__panel { padding: 1.25rem 0; }

        /* Modal demo */
        .modal-demo {
            background: var(--atlas-blue);
            border: 1px solid rgba(200, 150, 62, 0.2);
            border-radius: var(--atlas-radius-lg);
            box-shadow: 0 24px 48px rgba(0, 0, 0, 0.4);
            max-width: 28rem;
        }
        .modal-demo__header {
            display: flex; align-items: center; justify-content: space-between;
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid rgba(188, 197, 208, 0.1);
        }
        .modal-demo__title { font-size: 0.875rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; color: var(--atlas-antique-gold); }
        .modal-demo__close { background: none; border: none; color: var(--atlas-mist-gray); cursor: pointer; }
        .modal-demo__body { padding: 1.5rem; color: var(--atlas-silver-steel); font-size: 0.875rem; }
        .modal-demo__footer {
            display: flex; justify-content: flex-end; gap: 0.75rem;
            padding: 1rem 1.5rem;
            border-top: 1px solid rgba(188, 197, 208, 0.1);
        }

        /* Dropdown demo */
        .dropdown-demo { min-width: 12rem; }
        .dropdown-demo__trigger {
            display: flex; align-items: center; justify-content: space-between; width: 100%;
            padding: 0.5rem 0.75rem;
            background: var(--atlas-deep-abyss);
            border: 1px solid var(--atlas-antique-gold);
            border-radius: var(--atlas-radius-md);
            color: var(--atlas-silver-steel); font-size: 0.8125rem; cursor: pointer;
        }
        .dropdown-demo__panel {
            background: var(--atlas-blue);
            border: 1px solid rgba(200, 150, 62, 0.2);
            border-radius: var(--atlas-radius-md);
            margin-top: 0.25rem;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        }
        .dropdown-demo__item { padding: 0.5rem 0.75rem; font-size: 0.8125rem; color: var(--atlas-silver-steel); }
        .dropdown-demo__item--selected { color: var(--atlas-antique-gold); background: rgba(200, 150, 62, 0.08); }

        /* Tooltip demo */
        .tooltip-demo {
            position: relative;
            display: inline-flex;
        }
        .tooltip-demo__tip {
            position: absolute;
            bottom: calc(100% + 8px);
            left: 50%;
            transform: translateX(-50%);
            padding: 0.375rem 0.625rem;
            background: rgba(10, 14, 26, 0.95);
            border: 1px solid rgba(200, 150, 62, 0.4);
            border-radius: var(--atlas-radius-sm);
            color: var(--atlas-silver-steel);
            font-size: 0.6875rem;
            white-space: nowrap;
        }
        .tooltip-demo__tip::after {
            content: '';
            position: absolute;
            top: 100%;
            left: 50%;
            transform: translateX(-50%);
            border: 5px solid transparent;
            border-top-color: rgba(200, 150, 62, 0.4);
        }
    </style>
</head>
<body>

<div class="showcase">
    <header class="showcase-header">
        <h1>Atlas UIKit Showcase</h1>
        <p>A complete design system for Atlas Universalis &mdash; dark, nautical, cartographic.</p>
    </header>

    <!-- 1. Typography -->
    <section class="section">
        <h2 class="section__title">Typography</h2>
        <div class="section__divider"></div>
        <div class="stack">
            <div>
                <span class="type-label">Display</span>
                <div class="type-display">Charting Unknown Waters</div>
            </div>
            <div>
                <span class="type-label">Heading 1</span>
                <div class="type-h1">The Atlas Compendium</div>
            </div>
            <div>
                <span class="type-label">Heading 2</span>
                <div class="type-h2">Navigational Reference</div>
            </div>
            <div>
                <span class="type-label">Heading 3</span>
                <div class="type-h3">Coordinate Systems</div>
            </div>
            <div>
                <span class="type-label">Heading 4</span>
                <div class="type-h4">Sector Classification</div>
            </div>
            <div>
                <span class="type-label">Body</span>
                <div class="type-body">The cartographer's instruments lay spread across the mahogany desk, each one calibrated to the celestial meridians. Every measurement contributed to the grand atlas, a living document of explored territories.</div>
            </div>
            <div>
                <span class="type-label">Caption</span>
                <div class="type-caption">Coordinates verified &bull; Sector Alpha-7</div>
            </div>
