@page "/meridian"
@model Atlas.Web.Pages.MeridianModel
@{
    ViewData["Title"] = "Atlas Meridian";
}

@section Meta {
    <meta name="description" content="Atlas Meridian ‚Äî A desktop-first interactive canvas platform for mapping ideas, systems, and creative projects." />
    <meta property="og:title" content="Atlas Meridian" />
    <meta property="og:description" content="Interactive Canvas Platform" />
}

<style>
    .meridian-hero {
        min-height: 70vh;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .hero-bg-grid {
        position: absolute;
        inset: 0;
        background-image:
            linear-gradient(rgba(138, 148, 166, 0.06) 1px, transparent 1px),
            linear-gradient(90deg, rgba(138, 148, 166, 0.06) 1px, transparent 1px);
        background-size: 48px 48px;
        pointer-events: none;
    }

    .hero-blur-circle {
        position: absolute;
        border-radius: 50%;
        filter: blur(100px);
        opacity: 0.25;
        pointer-events: none;
    }

    .hero-blur-blue {
        width: 500px;
        height: 500px;
        background: var(--atlas-atlas-blue);
        top: -100px;
        left: -100px;
    }

    .hero-blur-gold {
        width: 400px;
        height: 400px;
        background: var(--atlas-antique-gold);
        bottom: -80px;
        right: -60px;
        opacity: 0.12;
    }

    .section-label {
        display: inline-block;
        font-family: var(--atlas-font-mono);
        font-size: 0.75rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--atlas-antique-gold);
        margin-bottom: 0.75rem;
    }

    .section-title {
        font-family: var(--atlas-font-sans);
        font-size: 2rem;
        font-weight: 600;
        color: var(--atlas-cloud-white);
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .section-desc {
        font-family: var(--atlas-font-sans);
        color: var(--atlas-mist-gray);
        font-size: 1rem;
        line-height: 1.7;
        max-width: 640px;
    }

    .glass-card {
        background: rgba(16, 27, 53, 0.5);
        border: 1px solid var(--atlas-border);
        border-radius: 12px;
        padding: 1.5rem;
        backdrop-filter: blur(8px);
        transition: border-color 0.2s;
    }

    .glass-card:hover {
        border-color: rgba(200, 150, 62, 0.3);
    }

    .glass-card-title {
        font-family: var(--atlas-font-sans);
        font-weight: 600;
        font-size: 1.1rem;
        color: var(--atlas-cloud-white);
        margin-bottom: 0.5rem;
    }

    .glass-card-text {
        font-family: var(--atlas-font-sans);
        color: var(--atlas-mist-gray);
        font-size: 0.9rem;
        line-height: 1.6;
    }

    .btn-primary {
        display: inline-flex;
        align-items: center;
        padding: 0.75rem 1.75rem;
        background: linear-gradient(135deg, var(--atlas-antique-gold), var(--atlas-amber-glow));
        color: var(--atlas-deep-abyss);
        font-family: var(--atlas-font-sans);
        font-weight: 600;
        font-size: 0.9rem;
        border-radius: 8px;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: opacity 0.2s;
    }

    .btn-primary:hover { opacity: 0.9; }

    .btn-outline {
        display: inline-flex;
        align-items: center;
        padding: 0.75rem 1.75rem;
        background: transparent;
        color: var(--atlas-cloud-white);
        font-family: var(--atlas-font-sans);
        font-weight: 500;
        font-size: 0.9rem;
        border-radius: 8px;
        border: 1px solid var(--atlas-border);
        text-decoration: none;
        cursor: pointer;
        transition: border-color 0.2s;
    }

    .btn-outline:hover { border-color: var(--atlas-antique-gold); }

    .tech-badge {
        display: inline-block;
        font-family: var(--atlas-font-mono);
        font-size: 0.75rem;
        padding: 0.25rem 0.75rem;
        border-radius: 999px;
        border: 1px solid var(--atlas-border);
        color: var(--atlas-silver-steel);
        background: rgba(16, 27, 53, 0.4);
    }

    .download-card {
        background: rgba(16, 27, 53, 0.5);
        border: 1px solid var(--atlas-border);
        border-radius: 12px;
        padding: 2rem 1.5rem;
        text-align: center;
        backdrop-filter: blur(8px);
    }

    .download-card-disabled {
        opacity: 0.5;
        pointer-events: none;
    }

    .roadmap-phase {
        position: relative;
        padding-left: 2rem;
        border-left: 2px solid var(--atlas-border);
    }

    .roadmap-phase::before {
        content: '';
        position: absolute;
        left: -6px;
        top: 0;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: var(--atlas-antique-gold);
        border: 2px solid var(--atlas-deep-abyss);
    }

    .nav-bar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 50;
        padding: 1rem 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: background 0.3s, box-shadow 0.3s;
    }

    .nav-bar.scrolled {
        background: rgba(7, 13, 26, 0.95);
        backdrop-filter: blur(12px);
        box-shadow: 0 1px 0 var(--atlas-border);
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-link {
        font-family: var(--atlas-font-sans);
        font-size: 0.9rem;
        color: var(--atlas-silver-steel);
        text-decoration: none;
        transition: color 0.2s;
    }

    .nav-link:hover { color: var(--atlas-cloud-white); }

    .mobile-menu-btn {
        display: none;
        background: none;
        border: none;
        color: var(--atlas-silver-steel);
        cursor: pointer;
        padding: 0.5rem;
    }

    .mobile-menu {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 100;
        background: rgba(7, 13, 26, 0.98);
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
    }

    .mobile-menu.open { display: flex; }

    .mobile-menu .nav-link { font-size: 1.25rem; }

    .mobile-close-btn {
        position: absolute;
        top: 1rem;
        right: 1.5rem;
        background: none;
        border: none;
        color: var(--atlas-silver-steel);
        font-size: 1.5rem;
        cursor: pointer;
    }

    .footer-section {
        border-top: 1px solid var(--atlas-border);
        padding: 3rem 0 2rem;
        margin-top: 5rem;
    }

    @@media (max-width: 768px) {
        .nav-links { display: none; }
        .mobile-menu-btn { display: block; }
        .section-title { font-size: 1.5rem; }
        .grid-3 { grid-template-columns: 1fr !important; }
        .hero-buttons { flex-direction: column; align-items: stretch; }
    }
</style>

<!-- NAVBAR -->
<nav class="nav-bar" id="navbar">
    <a href="/">
        <img src="~/images/atlas-universalis-wordmark.svg" alt="Atlas Universalis" style="height: 28px;" />
    </a>
    <div class="nav-links">
        <a href="/" class="nav-link">Apps</a>
        <a href="/#projects" class="nav-link">Projects</a>
        <a href="/#about" class="nav-link">About</a>
        <a href="mailto:contact@atlasuniversalis.com" class="btn-primary" style="padding: 0.5rem 1.25rem; font-size: 0.85rem;">Get in Touch</a>
    </div>
    <button class="mobile-menu-btn" onclick="document.getElementById('mobileMenu').classList.add('open')" aria-label="Open menu">
        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 12h18M3 6h18M3 18h18"/></svg>
    </button>
</nav>

<!-- MOBILE MENU -->
<div class="mobile-menu" id="mobileMenu">
    <button class="mobile-close-btn" onclick="document.getElementById('mobileMenu').classList.remove('open')" aria-label="Close menu">&times;</button>
    <a href="/" class="nav-link">Apps</a>
    <a href="/#projects" class="nav-link">Projects</a>
    <a href="/#about" class="nav-link">About</a>
    <a href="mailto:contact@atlasuniversalis.com" class="btn-primary">Get in Touch</a>
</div>

<!-- HERO -->
<section class="meridian-hero">
    <div class="hero-blur-circle hero-blur-blue"></div>
    <div class="hero-blur-circle hero-blur-gold"></div>
    <div class="hero-bg-grid"></div>
    <div style="position: relative; z-index: 1; text-align: center; max-width: 720px; padding: 6rem 1.5rem 4rem;">
        <img src="~/images/atlas-meridian-wordmark.svg" alt="Atlas Meridian" style="height: 3.5rem; margin-bottom: 1.5rem;" class="hero-wordmark" />
        <p class="section-label" style="margin-bottom: 1rem;">Interactive Canvas Platform</p>
        <p class="section-desc" style="max-width: 560px; margin: 0 auto 2rem; font-size: 1.05rem;">
            A desktop-first visual workspace for mapping ideas, systems, and creative projects with linked nodes, rich media editing, and spatial organization.
        </p>
        <div class="hero-buttons" style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
            <a href="mailto:contact@atlasuniversalis.com?subject=Atlas%20Meridian%20Updates" class="btn-primary">Join the Waitlist</a>
            <a href="#download" class="btn-outline">Download Preview</a>
        </div>
    </div>
</section>

<!-- VISION -->
<section style="max-width: 1100px; margin: 0 auto; padding: 5rem 1.5rem;">
    <div style="text-align: center; margin-bottom: 3rem;">
        <span class="section-label">Vision</span>
        <h2 class="section-title">A Canvas Built for Systems Thinking</h2>
        <p class="section-desc" style="margin: 0 auto;">
            Meridian combines visual mapping, media editing, and structured organization into a single fluid workspace.
        </p>
    </div>
    <div class="grid-3" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem;">
        <div class="glass-card">
            <div style="font-size: 1.5rem; margin-bottom: 0.75rem;">üß≠</div>
            <h3 class="glass-card-title">Spatial First</h3>
            <p class="glass-card-text">Think in space, not lists. Place nodes anywhere on an infinite canvas and connect them visually.</p>
        </div>
        <div class="glass-card">
            <div style="font-size: 1.5rem; margin-bottom: 0.75rem;">üé®</div>
            <h3 class="glass-card-title">Media Rich</h3>
            <p class="glass-card-text">Embed images, text, code snippets, and rich media directly into your canvas nodes.</p>
        </div>
        <div class="glass-card">
            <div style="font-size: 1.5rem; margin-bottom: 0.75rem;">üîó</div>
            <h3 class="glass-card-title">Structured Systems</h3>
            <p class="glass-card-text">Link nodes, nest groups, and build structured hierarchies that reflect real systems.</p>
        </div>
    </div>
</section>

<!-- STATUS -->
<section style="max-width: 1100px; margin: 0 auto; padding: 5rem 1.5rem;">
    <div style="text-align: center; margin-bottom: 3rem;">
        <span class="section-label">Status</span>
        <h2 class="section-title">Current Status</h2>
        <p class="section-desc" style="margin: 0 auto;">
            Meridian is in active planning and prototype development. Core architecture decisions are being finalized.
        </p>
    </div>
    <div class="grid-3" style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; max-width: 900px; margin: 0 auto;">
        <div>
            <ul style="list-style: none; padding: 0; display: flex; flex-direction: column; gap: 1rem;">
                <li class="glass-card" style="display: flex; align-items: flex-start; gap: 0.75rem;">
                    <span style="color: var(--atlas-antique-gold); font-size: 1.25rem; line-height: 1;">‚ú¶</span>
                    <span class="glass-card-text">Interactive canvas foundation with pan, zoom, and selection</span>
                </li>
                <li class="glass-card" style="display: flex; align-items: flex-start; gap: 0.75rem;">
                    <span style="color: var(--atlas-antique-gold); font-size: 1.25rem; line-height: 1;">‚ú¶</span>
                    <span class="glass-card-text">Linked and nested node model for structured knowledge</span>
                </li>
                <li class="glass-card" style="display: flex; align-items: flex-start; gap: 0.75rem;">
                    <span style="color: var(--atlas-antique-gold); font-size: 1.25rem; line-height: 1;">‚ú¶</span>
                    <span class="glass-card-text">Editor roadmap covering text, image, and code editing</span>
                </li>
            </ul>
        </div>
        <div class="glass-card">
            <h3 class="glass-card-title" style="margin-bottom: 1rem;">Technical Direction</h3>
            <p class="glass-card-text" style="margin-bottom: 1.25rem;">
                Desktop-first architecture built with .NET and Avalonia UI. High-performance rendering powered by Skia for smooth canvas interactions at any scale.
            </p>
            <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;">
                <span class="tech-badge">.NET</span>
                <span class="tech-badge">Avalonia</span>
                <span class="tech-badge">Skia</span>
                <span class="tech-badge">Local-first</span>
                <span class="tech-badge">Sync-ready</span>
            </div>
        </div>
    </div>
</section>

<!-- DOWNLOAD -->
<section id="download" style="max-width: 1100px; margin: 0 auto; padding: 5rem 1.5rem;">
    <div style="text-align: center; margin-bottom: 3rem;">
        <span class="section-label">Download</span>
        <h2 class="section-title">Meridian Preview Builds</h2>
    </div>
    <div class="grid-3" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem;">
        <div class="download-card">
            <div style="font-size: 2rem; margin-bottom: 1rem;">ü™ü</div>
            <h3 class="glass-card-title">Windows</h3>
            <p class="glass-card-text" style="margin-bottom: 1.25rem;">x64, Windows 10+</p>
            <a href="mailto:contact@atlasuniversalis.com?subject=Meridian%20Windows%20Preview%20Request" class="btn-primary" style="width: 100%; justify-content: center;">Request Windows Preview</a>
        </div>
        <div class="download-card download-card-disabled">
            <div style="font-size: 2rem; margin-bottom: 1rem;">üçé</div>
            <h3 class="glass-card-title">macOS</h3>
            <p class="glass-card-text" style="margin-bottom: 1.25rem;">Apple Silicon &amp; Intel</p>
            <span class="btn-outline" style="width: 100%; justify-content: center; opacity: 0.5; cursor: default;">Coming Soon</span>
        </div>
        <div class="download-card download-card-disabled">
            <div style="font-size: 2rem; margin-bottom: 1rem;">üêß</div>
            <h3 class="glass-card-title">Linux</h3>
            <p class="glass-card-text" style="margin-bottom: 1.25rem;">AppImage / .deb</p>
            <span class="btn-outline" style="width: 100%; justify-content: center; opacity: 0.5; cursor: default;">Coming Soon</span>
        </div>
    </div>
</section>

<!-- ROADMAP -->
<section id="roadmap" style="max-width: 900px; margin: 0 auto; padding: 5rem 1.5rem;">
    <div style="text-align: center; margin-bottom: 3rem;">
        <span class="section-label">Roadmap</span>
        <h2 class="section-title">Meridian Next Steps</h2>
    </div>
    <div style="display: flex; flex-direction: column; gap: 2.5rem;">
        <div class="roadmap-phase">
            <h3 class="glass-card-title">Phase 1 ‚Äî Foundation</h3>
            <p class="glass-card-text">Core canvas with pan, zoom, and selection. Node creation and linking system. Basic spatial layout engine.</p>
        </div>
        <div class="roadmap-phase">
            <h3 class="glass-card-title">Phase 2 ‚Äî Editors</h3>
            <p class="glass-card-text">Text and image editing within nodes. Inspector panels for node properties. Rich media embedding and preview.</p>
        </div>
        <div class="roadmap-phase">
            <h3 class="glass-card-title">Phase 3 ‚Äî Collaboration</h3>
            <p class="glass-card-text">Shared canvases with multi-user support. Live nodes with real-time data connections. Cloud sync and version history.</p>
        </div>
    </div>
</section>

<!-- FOOTER -->
<footer class="footer-section">
    <div style="max-width: 1100px; margin: 0 auto; padding: 0 1.5rem;">
        <div style="display: grid; grid-template-columns: 2fr 1fr 1fr; gap: 3rem; margin-bottom: 2rem;" class="grid-3">
            <div>
                <img src="~/images/atlas-universalis-wordmark.svg" alt="Atlas Universalis" style="height: 24px; margin-bottom: 1rem;" />
                <p class="glass-card-text">Building tools for structured creativity and systematic exploration.</p>
            </div>
            <div>
                <h4 style="font-family: var(--atlas-font-sans); font-weight: 600; color: var(--atlas-cloud-white); font-size: 0.85rem; margin-bottom: 0.75rem;">Quick Links</h4>
                <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                    <a href="/" class="nav-link" style="font-size: 0.85rem;">Home</a>
                    <a href="/meridian" class="nav-link" style="font-size: 0.85rem;">Meridian</a>
                    <a href="/showcase" class="nav-link" style="font-size: 0.85rem;">Showcase</a>
                </div>
            </div>
            <div>
                <h4 style="font-family: var(--atlas-font-sans); font-weight: 600; color: var(--atlas-cloud-white); font-size: 0.85rem; margin-bottom: 0.75rem;">Contact</h4>
                <a href="mailto:contact@atlasuniversalis.com" class="nav-link" style="font-size: 0.85rem;">contact@atlasuniversalis.com</a>
            </div>
        </div>
        <div style="border-top: 1px solid var(--atlas-border); padding-top: 1.5rem; text-align: center;">
            <p style="font-family: var(--atlas-font-sans); font-size: 0.8rem; color: var(--atlas-mist-gray);">
                &copy; @DateTime.UtcNow.Year Atlas Universalis. All rights reserved.
            </p>
        </div>
    </div>
</footer>

@section Scripts {
    <script>
        (function () {
            var navbar = document.getElementById('navbar');
            window.addEventListener('scroll', function () {
                if (window.scrollY > 40) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });
        })();
    </script>
}
