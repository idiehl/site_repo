# AtlasOps Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/atlasops

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=CHANGE-ME-IN-PRODUCTION-USE-STRONG-KEY
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS
# =============================================================================
# For development:
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8000
# For production (subdomain deployment):
# ALLOWED_ORIGINS=https://quickpro.atlasuniversalis.com,https://atlasuniversalis.com

# =============================================================================
# FRONTEND
# =============================================================================
# For development:
FRONTEND_URL=http://localhost:5173
# For production (subdomain deployment):
# FRONTEND_URL=https://quickpro.atlasuniversalis.com

# =============================================================================
# OPENAI
# =============================================================================
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EXTRACTION_MODEL=gpt-4o-mini

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=true
ENVIRONMENT=development
